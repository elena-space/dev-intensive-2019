<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Profile">

    </style>

    <style name="Profile.EditText" parent="Profile">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingTop">@dimen/spacing_4</item>
        <item name="android:enabled">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Profile.EditText.Single" parent="Profile.EditText">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Profile.EditText.MultiLine" parent="Profile.EditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLength">128</item>
    </style>

    <style name="Profile.Header" parent="Profile">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Profile.Header.Nickname" parent="Profile.Header">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:layout_marginTop">@dimen/spacing_16</item>
    </style>

    <style name="Profile.Header.Rank" parent="Profile.Header">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Profile.Metrics" parent="Profile">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Profile.Metrics.Label" parent="Profile.Metrics">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Profile.Metrics.Value" parent="Profile.Metrics">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="Profile.InfoItem">
        <item name="android:paddingTop">@dimen/spacing_16</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">@dimen/spacing_16</item>
        <item name="android:paddingRight">@dimen/spacing_16</item>
        <item name="android:minHeight">72dp</item>
    </style>

    <style name="OnlineIndicator">
        <item name="android:layout_width">@dimen/item_chat_indicator_size</item>
        <item name="android:layout_height">@dimen/item_chat_indicator_size</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/bg_indicator</item>
    </style>

    <style name="Avatar">
        <item name="android:layout_width">@dimen/avatar_item_size</item>
        <item name="android:layout_height">@dimen/avatar_item_size</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="aiv_borderWidth">0dp</item>
        <item name="aiv_initialsSize">@dimen/font_20</item>
    </style>

</resources>
